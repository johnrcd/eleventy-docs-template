		</ul>

		<p>links</p>
		<ul>
			<li>youtube</li>
			<li>bsky</li>
		</ul>

		<p>bonus</p>
		<ul>
			<li>site themes</li>
			<li>metadata</li>
		</ul>
	</div>

	{# middle/right: content #}
	<main class="siteContainer__panel siteContainer__panel-content">
		{{ content | safe }}
	</main>
</div>
